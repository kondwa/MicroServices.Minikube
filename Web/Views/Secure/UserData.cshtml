@model Web.Models.UserData

@{
    ViewData["Title"] = "User Data";
}

<h1>User Data</h1>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User)
        </dd>
    </dl>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Orders)
        </dt>
        <dd class="col-sm-10">
            <ul class="list-group">
                @foreach (var order in Model.Orders)
                {
                    <li class="list-group-item">@Html.DisplayFor(model => order)</li>
                }
            </ul>
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Products)
        </dt>
        <dd class="col-sm-10">
            <ul class="list-group">
                @foreach (var product in Model.Products)
                {
                    <li class="list-group-item">@Html.DisplayFor(model => product)</li>
                }
            </ul>
        </dd>
    </dl>
</div>
